#!/$SPEC/bin/specperl
#
#  extract_misc - a tool for extracting encoded sections from a raw file
#                 No support is provided for this script.

#  Copyright 2006-2018 Standard Performance Evaluation Corporation
#
#  Author: Cloyce D. Spradling
#
# $Id: extract_misc 6072 2018-10-26 03:41:07Z CloyceS $

use MIME::Base64;
use IO::File;
use File::Spec::Functions qw(rel2abs);
use File::Basename;
use strict;

BEGIN {
  my $where = dirname(rel2abs($0));
  unshift @INC,
        "$where/../harness",
        "$where/../common";
}

require 'vars.pl';
require 'util.pl';

use vars qw(@config);

@config = ();

if (@ARGV != 2) {
  die "Usage: $0 <section> <file>\n";
}
my ($section, $file) = @ARGV;

if (!-r $file) {
  die "\"$file\" is not readable: $!\nStopped";
}

my $ifh = new IO::File '<'.$file;
die "\"$file\" could not be opened: $!\nStopped" unless defined($ifh);

while (<$ifh>) {
    tr/\015\012//d;
    next unless /^(spec\.${main::lcsuite}\.)?$section(\d+)(:| =) (.*)$/o;
    my ($tmpidx, $data) = ($2+0, $4);
    $config[$tmpidx] = $data;
}
print scalar(decode_decompress(join('', @config)));

sub Log {
  my ($lvl, @msgs) = @_;
  print @msgs;
}

# Editor settings: (please leave this at the end of the file)
